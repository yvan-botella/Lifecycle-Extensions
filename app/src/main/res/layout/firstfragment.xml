<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="context"
            type="com.wanwan.lifecycle_extension_demo.FirstFragment"/>
        <import type="android.view.View"/>
        <import type="com.wanwan.lifecycle_extension_demo.SecondFragment"/>
    </data>

    <RelativeLayout
        android:onClick="@{ view -> (SecondFragment.navigateTo())}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout"
            android:transitionName="layout_transition"
            android:background="@android:color/holo_blue_dark"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/title"
            android:transitionName="title_transition"
            android:text="@{context.getClass().simpleName}"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/logo"
            android:transitionName="logo_transition"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</layout>